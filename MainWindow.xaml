<Window
    x:Class="ELROOMBA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ELROOMBA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="auto, *">
        
        <Grid
            x:Name="_CUSTOM_TITLE_BAR"
            Grid.Row="0"
            Height="30"
            Background="{ThemeResource AppBarBackgroundThemeBrush}">
            <Image
                Margin="8,0"
                HorizontalAlignment="Left"
                Source="Assets/ElRoomba.png" />
            <TextBlock
                x:Name="_TITLE_TEXT_BLOCK"
                Margin="40,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind Viewmodel.Title}"
                TextWrapping="NoWrap" />
        </Grid>

        <Frame 
            x:Name="_MAIN_FRAME"
            Grid.Row="1"/>


        <Border 
            x:Name="_INFO_BORDER"
            Background="{ThemeResource SystemControlAccentDark2AcrylicElementAccentDark2MediumHighBrush}"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Height="25">

            <Grid>
                
                <Button
                    x:Name="_ALERT_BUTTON"
                    Click="_ONCLICK_ALERTDIALOG"
                    Background="{ThemeResource SystemControlAccentDark2AcrylicElementAccentDark2MediumHighBrush}">
                    
                    <Button.Style>
                        <Style 
                            TargetType="Button">
                            <Setter 
                                Property="BorderThickness" 
                                Value="0"/>
                        </Style>
                    </Button.Style>

                    <StackPanel
                        x:Name="_ICONS_STACK"
                        Orientation="Horizontal"
                        Height="auto">

                        <Image 
                            x:Name="_ALERT_ICON"
                            Source="Assets/Alert.png"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="10 0 0 0" />

                        <TextBlock 
                            x:Name="_ALERT_COUNT_TEXT"
                            Text="{x:Bind Viewmodel._ALERTCOUNT}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Margin="10 0 0 0"/>

                    </StackPanel>
                    
                </Button>


                <Button
                    x:Name="_HELP_BUTTON"
                    Height="auto"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Button.Style>
                        <Style 
                            TargetType="Button">
                            <Setter 
                                Property="BorderThickness" 
                                Value="0"/>
                        </Style>
                    </Button.Style>

                    <StackPanel
                        x:Name="_HELP_STACKPANEL"
                        Orientation="Horizontal"
                        Height="auto">

                        <TextBlock 
                            x:Name="_HELP_TEXT"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Text="Help"/>

                    </StackPanel>
                    
                </Button>

                <ContentDialog 
                    x:Name="_ALERT_COUNT_DIALOG"
                    CloseButtonText="Cerrar"
                    Title="{x:Bind Viewmodel._ALERT_TEXTT}">
                    
                    <ContentDialog.TitleTemplate>
                        <DataTemplate>
                            <StackPanel 
                                x:Name="_ALERT_COUNT_DIALOG_PANEL"
                                Orientation="Horizontal">
                                <Image 
                                    x:Name="_ROOMBA_IMAGE"
                                    Source="Assets/ElRoomba.png"/>
                                
                                <TextBlock 
                                    x:Name="_ROOMBA_TEXT_ALERT_DIALOG"
                                    Margin="10 0 0 0" 
                                    Text="ELROOMBA"
                                    FontWeight="Bold"
                                    VerticalAlignment="Center"/>

                            </StackPanel>
                        </DataTemplate>
                    </ContentDialog.TitleTemplate>

                    <StackPanel 
                        x:Name="_ALERTDIALOG_MAINSTACKPANEL"
                        Orientation="Vertical"
                        Padding="25">

                        <TextBlock 
                            x:Name="_PROBLEM_TEXT"
                            Text="{x:Bind Viewmodel._ALERT_TEXTT}"
                            FontWeight="Bold"
                            FontSize="18"
                            FontStretch="Expanded"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"/>

                        <ScrollViewer 
                            x:Name="SCROLLBAR_ALERT_DIAGNOSTIC"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            VerticalScrollMode="Enabled"
                            HorizontalScrollMode="Enabled">

                            <StackPanel
                                 x:Name="_SCROLL_GRID_ALERT"
                                Orientation="Vertical">

                                <TextBlock 
                                    x:Name="_PROBLEM_DIAGNOSTIC_TEXT"
                                    Text="{x:Bind Viewmodel._Diagnostic_Problem_Text1}"
                                    FontWeight="Normal"
                                    FontSize="10"
                                    FontStretch="Normal" />

                            </StackPanel>
                            
                        </ScrollViewer>

                    </StackPanel>
                </ContentDialog>
                
            </Grid>

        </Border>
    </Grid>
</Window>
